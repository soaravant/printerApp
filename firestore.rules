rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEV RULES: Allow public reads for app UI; block writes from client
    // Tighten these before production.
    match /users/{userId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Print jobs - users can read their own, admins can read all
    match /printJobs/{jobId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Lamination jobs - same rules as print jobs
    match /laminationJobs/{jobId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Billing records - users can read their own, admins can read/write all
    match /billing/{billingId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Settings - only admins can read/write
    match /settings/{settingId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Price tables - only admins can read/write
    match /priceTables/{tableId} {
      allow read: if true;
      allow write: if false;
    }

    // Income collection
    match /income/{incomeId} {
      allow read: if true;
      allow write: if false;
    }

    // Bank aggregate
    match /bank/{bankId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
