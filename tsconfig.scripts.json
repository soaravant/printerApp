    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": ".scripts-dist",
    "noEmit": false,
    "target": "ES2019",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": false
  },
  "include": [
    "scripts/seed-firestore.ts",
    "scripts/clear-firestore.ts",
    "scripts/backfill-device-ip.ts",
    "scripts/backfill-last-income.ts",
    "scripts/backfill-income-createdAt-and-ids.ts",
    "scripts/backfill-income-future-to-last-month.ts",
    "scripts/report-device-names.ts",
    "scripts/export-snapshots.ts",
    "scripts/migrations/2025-rename-labels.ts",
    "scripts/utils/firebase-admin.ts",
    "lib/firebase-schema.ts",
    "lib/utils.ts"
  ]
}

